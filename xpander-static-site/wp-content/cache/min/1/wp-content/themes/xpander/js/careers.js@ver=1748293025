jQuery(document).ready(function($){var $carousel=$(".carousel-wrapper");var resizeTimer;function initializeSlick(){$carousel.slick({slidesToShow:4,slidesToScroll:1,autoplay:!0,autoplaySpeed:0,speed:7000,cssEase:"linear",infinite:!0,arrows:!1,dots:!1,pauseOnHover:!1,responsive:[{breakpoint:768,settings:{slidesToShow:2,slidesToScroll:1,},},],})}
initializeSlick();$(window).on("resize",function(){clearTimeout(resizeTimer);if($carousel.hasClass("slick-initialized")){$carousel.slick("unslick")}
resizeTimer=setTimeout(function(){initializeSlick()},500)});function updateSelectionText(){var selectedDepartments=$("#filter-department").val()?$("#filter-department").val().length:0;var selectedLocations=$("#filter-location").val()?$("#filter-location").val().length:0;var selectedHumanAi=$("#filter-human-ai").val()?$("#filter-human-ai").val().length:0;var departmentText=selectedDepartments>0?selectedDepartments+" Selected":"All Departments";var locationText=selectedLocations>0?selectedLocations+" Selected":"All Locations";var humanAiText=selectedHumanAi>0?selectedHumanAi+" Selected":"Human/AI Employee";$("#filter-department").next(".select2-container").find(".select2-selection__rendered").text(departmentText);$("#filter-location").next(".select2-container").find(".select2-selection__rendered").text(locationText);$("#filter-human-ai").next(".select2-container").find(".select2-selection__rendered").text(humanAiText)}
function filterJobs(){var selectedDepartments=$("#filter-department").val()||[];var selectedLocations=$("#filter-location").val()||[];var selectedHumanAi=$("#filter-human-ai").val()||[];var visibleJobCount=0;$(".job-item").each(function(){var jobDepartments=$(this).attr("data-department").split(",");var jobLocations=$(this).attr("data-location").split(",");var jobHumanAi=$(this).attr("data-humanai").split(",");var matchesDepartment=selectedDepartments.length===0||selectedDepartments.some((dep)=>jobDepartments.includes(dep));var matchesLocation=selectedLocations.length===0||selectedLocations.some((loc)=>jobLocations.includes(loc));var matchesHumanAi=selectedHumanAi.length===0||selectedHumanAi.some((ai)=>jobHumanAi.includes(ai));if(matchesDepartment&&matchesLocation&&matchesHumanAi){$(this).show();visibleJobCount++}else{$(this).hide()}
$(".job-count span").text(visibleJobCount)})}
$("#filter-department, #filter-location, #filter-human-ai").select2({placeholder:function(){return $(this).data("placeholder")},allowClear:!0,closeOnSelect:!1,templateSelection:function(){return null},}).on("change",function(){updateSelectionText();filterJobs()});updateSelectionText();filterJobs();$("#post-search").on("keyup",function(){let searchValue=$(this).val().toLowerCase().trim();let totalCount=0;$(".job-item").each(function(){let jobTitle=$(this).find(".job-title").text().toLowerCase();let jobDepartment=$(this).data("department").toLowerCase();let jobLocation=$(this).data("location").toLowerCase();let jobDescription=$(this).find(".job-description").text().toLowerCase();let jobMeta=$(this).find(".job-meta").text().toLowerCase();if(jobTitle.includes(searchValue)||jobDepartment.includes(searchValue)||jobLocation.includes(searchValue)||jobDescription.includes(searchValue)||jobMeta.includes(searchValue)){$(this).show();totalCount++}else{$(this).hide()}});$(".job-count span").text(totalCount)})})