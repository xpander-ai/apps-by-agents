jQuery(document).ready(function($){var selectedCategory="all";$("#searchBox").on("keyup",function(){var searchTerm=$(this).val().toLowerCase();$(".press-item").each(function(){var title=$(this).find(".press-title").text().toLowerCase();var content=$(this).find(".press-content").text().toLowerCase();var matchesSearch=title.includes(searchTerm)||content.includes(searchTerm);var matchesCategory=selectedCategory==="all"||$(this).data("category").includes(selectedCategory);$(this).toggle(matchesSearch&&matchesCategory)})});$(".filter-btn").on("click",function(){var category=$(this).data("category");$(".filter-btn").removeClass("active");$(this).addClass("active");selectedCategory=category;$(".press-item").each(function(){var matchesSearch=$("#searchBox").val()===""||$(this).find(".press-title").text().toLowerCase().includes($("#searchBox").val().toLowerCase());var matchesCategory=selectedCategory==="all"||$(this).data("category").includes(selectedCategory);$(this).toggle(matchesSearch&&matchesCategory)})})})